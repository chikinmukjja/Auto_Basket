<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:sl="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/backgroundBasic"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.ssomai.android.scalablelayout.ScalableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        sl:scale_base_height="200"
        sl:scale_base_width="800">

        <!-- 기기 이름 내용 -->
        <TextView
            android:id="@+id/list_element_bluetooth_device_textView_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/textColorBasic"
            sl:scale_height="50"
            sl:scale_left="20"
            sl:scale_top="30"
            sl:scale_width="760"
            sl:scale_textsize="40"
            sl:textview_wrapcontent_direction="bottom"
            sl:textview_wrapcontent_resizesurrounded="true"
            sl:textview_wrapcontent_movesiblings="true"
            />

        <!-- 맥 주소 내용 -->
        <TextView
            android:id="@+id/list_element_bluetooth_device_textView_mac"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/textColorBasic"
            sl:scale_height="40"
            sl:scale_left="20"
            sl:scale_top="110"
            sl:scale_width="760"
            sl:scale_textsize="30"
            sl:textview_wrapcontent_direction="bottom"
            sl:textview_wrapcontent_resizesurrounded="true"
            sl:textview_wrapcontent_movesiblings="true"
            />

        <!-- 밑줄 -->
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            sl:scale_height="2"
            sl:scale_left="0"
            sl:scale_top="198"
            sl:scale_width="800"
            />
    </com.ssomai.android.scalablelayout.ScalableLayout>

</LinearLayout>